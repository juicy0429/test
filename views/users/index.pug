extends ../layout

block content
  .container
    h1.main-title 회원목록
    
    table.table.table-hover
      thead
        tr
          th 이름
          th 이메일
          th 가입일시
          th 회원구분
          th
      tbody
 
        each user in users
          tr
            td
         
              a(href=`/users/${user._id}`)= user.name 
            td= user.email
           
            td= moment(user.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td= user.using
            td
              a.btn.btn-sm.btn-outline-secondary(href=`/users/${user._id}/edit`) 
                | #[i.fa.fa-pencil] 개인정보 수정
              | 
              a.btn.btn-sm.btn-outline-danger(href=`/users/${user._id}?_method=DELETE`)
                | #[i.fa.fa-trash] 회원탈퇴
    a.btn.btn-primary(href='/users/new') #[i.fa.fa-plus] 사용자 추가